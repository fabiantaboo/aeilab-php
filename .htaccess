# AEI Lab Internal Tool - Apache Configuration

# Basic security headers
<IfModule mod_headers.c>
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>

# Deny access to sensitive files
<Files ~ "^\.">
    Require all denied
</Files>

# Protect specific sensitive files
<Files "config.php">
    Require all denied
</Files>

<Files "*.log">
    Require all denied
</Files>

<Files "*.bak">
    Require all denied
</Files>

# Protect directories with sensitive files (only direct HTTP access)
<LocationMatch "^/(config|classes|includes|database)/">
    Require all denied
</LocationMatch>

# Disable server signature
ServerSignature Off 